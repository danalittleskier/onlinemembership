<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
		"http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	<bean id="registrationAction" class="org.ussa.spring.flows.registration.RegistrationAction">
		<property name="addressDao" ref="addressDao"/>
		<property name="clubDao" ref="clubDao"/>
		<property name="divisionDao" ref="divisionDao"/>
		<property name="memberDao" ref="memberDao"/>
		<property name="stateDao" ref="stateDao"/>
		<property name="nationDao" ref="nationDao"/>
		<property name="inventoryDao" ref="inventoryDao"/>
		<property name="recommendedMembershipsDao" ref="recommendedMembershipsDao"/>
		<property name="memberLegalDao" ref="memberLegalDao"/>
		<property name="rulesBL" ref="rulesBL"/>
	</bean>

	<bean id="paymentAction" class="org.ussa.spring.flows.registration.PaymentAction">
		<property name="memberRegistrationService" ref="memberRegistrationService"/>
	</bean>

	<!-- Form objects -->
	<bean id="accountBean" class="org.ussa.spring.flows.FormActionTemplate">
		<property name="formObjectName" value="accountBean"/>
		<property name="formObjectClass" value="org.ussa.beans.AccountBean"/>
		<property name="formObjectScope" value="FLOW"/>
		<property name="validators">
			<map>
				<entry key="validatorContactInfo" value-ref="validatorContactInfo"/>
				<entry key="validatorSportMembership" value-ref="validatorSportMembership"/>
				<entry key="validatorSportMembershipNext" value-ref="validatorSportMembershipNext"/>
				<entry key="validatorAddExtras" value-ref="validatorAddExtras"/>
				<entry key="validatorStateClub" value-ref="validatorStateClub"/>
				<entry key="validatorMedical" value-ref="validatorMedical"/>
				<entry key="validatorMedicalWaiver" value-ref="validatorMedicalWaiver"/>
				<entry key="validatorReleaseWaiver" value-ref="validatorReleaseWaiver"/>
				<entry key="validatorRegistrationPayment" value-ref="validatorRegistrationPayment"/>
			</map>
		</property>
	</bean>

	<!-- Validators -->
	<bean id="validatorContactInfo" parent="validatorTemplate">
		<property name="formName" value="contactInfo"/>
	</bean>
	<bean id="validatorStateClub" parent="validatorTemplate">
		<property name="formName" value="stateClub"/>
	</bean>
	<bean id="validatorSportMembership" parent="validatorTemplate">
		<property name="formName" value="sportMembership"/>
	</bean>
	<bean id="validatorSportMembershipNext" parent="validatorTemplate">
		<property name="formName" value="sportMembershipNext"/>
	</bean>
	<bean id="validatorAddExtras" parent="validatorTemplate">
		<property name="formName" value="extras"/>
	</bean>
	<bean id="validatorMedical" parent="validatorTemplate">
		<property name="formName" value="medical"/>
	</bean>
	<bean id="validatorMedicalWaiver" parent="validatorTemplate">
		<property name="formName" value="medicalWaiver"/>
	</bean>
	<bean id="validatorReleaseWaiver" parent="validatorTemplate">
		<property name="formName" value="releaseWaiver"/>
	</bean>
	<bean id="validatorRegistrationPayment" parent="validatorTemplate">
		<property name="formName" value="registrationPayment"/>
	</bean>

</beans>